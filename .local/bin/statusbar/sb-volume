#!/bin/sh

# Prints the current volume or Ô±ù if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	3) notify-send "üì¢ Volume module" "\- Shows volume Ô©Ω, Ô±ù if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo "Ô±ù" && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ÔÄ®"
elif [ "$vol" -gt "30" ]; then
	icon="ÔÄß"
elif [ "$vol" -gt "0" ]; then
	icon="ÔÄ¶"
elif [ "$vol" -eq "0" ]; then 
  icon="Ôë¶"
else
  echo " Ôë¶ ÔÑ®ÔÑ® " && exit
fi

echo " $icon $vol% "
