#!/bin/sh

# Options can be found at https://wttr.in/:help

weatherfile="$XDG_CACHE_HOME/weatherreport"
emojifile="$XDG_CACHE_HOME/weatheremoji"
url="wttr.in/?FA"

getforecast() {
	curl -sf4 "$url" >$weatherfile || exit 1
	curl -sf4 "$url&format=%c" | sed 's/â˜€ï¸/îŒ/;s/â˜ï¸/îŒ½/;s/â›…ï¸/îŒ‚/;s/â›ˆ/îŒ¸/;s/âœ¨/î°/;s/â„ï¸/î¯/;s/ğŸŒ¦/îŒˆ/;s/ğŸŒ§/îŒ³/;s/ğŸŒ¨/îŒµ/;s/ğŸŒ©/îŒ°/;s/ğŸŒ«/îŒ“/;' >$emojifile || exit 1
}
showweather() {
	emoji="$(printf "\033[12m%s\033[10m" $(cut -d ' ' -f 1 $emojifile))"
	sed '16q;d' $weatherfile | grep -wo "[0-9]*%" | sort -rn | sed "s/^/$emoji /g;1q" | tr -d '\n'
	sed '13q;d' $weatherfile | grep -o "m\\([-+]\\)*[0-9]\\+" | sed 's/+//g' | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " \033[34mï•…\033[0m " $1 "Â°","\033[31mï•\033[0m " $2 "Â°"}'
}
getforecast
showweather
