# vim:set ft=sh

add_module()
{
	case :$GTK_MODULES: in
		*:$1:*)
			;;
		*)
			if [ -z "$GTK_MODULES" ]
			then
				GTK_MODULES=$1
			else
				GTK_MODULES=$GTK_MODULES:$1
			fi
			;;
	esac
}

add_module gail
add_module atk-bridge

export GTK_MODULES
if [ -x "/usr/bin/dbus-update-activation-environment" ]; then
        dbus-update-activation-environment --verbose --systemd GTK_MODULES
fi
